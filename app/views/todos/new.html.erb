
<h1>New Todo</h1>

<%= form_with scope: :todo, url: todos_path, local: true do |form| %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>
   
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %>