<h1>Edit Todo</h1>

<%= form_with(model: @todo, local: true) do |form| %>
    
    <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    </p>
    
    <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    </p>
    
    <p>
    <%= form.label :duedate %><br>
    <%= datetime_local_field(:todo, :duedate) %>
    </p>
    
    <p>
    <%= form.submit %>
    </p>
    
    <% end %>
    